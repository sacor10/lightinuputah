{
  "name": "lightinuputah",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sendgrid/mail": "^8.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "compression": "^1.7.4",
    "contentful": "^11.7.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-fetch": "^2.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/react-google-recaptcha": "^2.1.9",
    "cross-env": "^7.0.3",
    "nth-check": "^2.1.1",
    "size-limit": "^11.1.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "webpack-dev-server": "^4.15.1"
  },
  "size-limit": [
    {
      "path": "build/static/js/*.js",
      "limit": "100 kB"
    },
    {
      "path": "build/static/css/*.css",
      "limit": "10 kB"
    }
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:heroku": "node heroku-build.js",
    "heroku-postbuild": "node heroku-build.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve": "node server.js",
    "serve-enhanced": "node server-enhanced.js",
    "serve-contact": "node server-with-contact.js",
    "serve-static": "node server-static.js",
    "serve-netlify": "node netlify-dev.js",
    "start:prod": "node server-static.js",
    "dev": "npm run build && npm run serve",
    "dev-enhanced": "npm run build && npm run serve-enhanced",
    "dev-contact": "npm run build && npm run serve-contact",
    "dev-static": "npm run build && npm run serve-static",
    "prod": "NODE_ENV=production npm run build && npm run serve",
    "prod-enhanced": "NODE_ENV=production npm run build && npm run serve-enhanced",
    "prod-static": "NODE_ENV=production npm run build && npm run serve-static",
    "deploy": "node deploy.js",
    "docker-build": "docker build -t lightin-up-utah .",
    "docker-run": "docker run -p 3000:3000 lightin-up-utah",
    "docker-compose-up": "docker-compose up -d",
    "docker-compose-down": "docker-compose down",
    "pm2-start": "pm2 start ecosystem.config.js",
    "pm2-stop": "pm2 stop ecosystem.config.js",
    "pm2-restart": "pm2 restart ecosystem.config.js",
    "pm2-logs": "pm2 logs",
    "pm2-monitor": "pm2 monit",
    "security:audit": "npm audit || exit 0",
    "security:fix": "npm audit fix",
    "security:fix-force": "npm audit fix --force",
    "security:update": "npm update",
    "security:check": "npm audit --audit-level=high",
    "prebuild": "npm run security:check",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:analyze": "cross-env GENERATE_SOURCEMAP=false npm run build",
    "build:prod": "cross-env GENERATE_SOURCEMAP=false npm run build",
    "build:optimized": "cross-env GENERATE_SOURCEMAP=false INLINE_RUNTIME_CHUNK=false npm run build",
    "build:stats": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js --mode static --report",
    "size": "npm run build && npx size-limit",
    "performance:audit": "npm run build && lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "performance:report": "npm run build && lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "performance:check": "npm run build && npx lighthouse http://localhost:3000 --only-categories=performance",
    "bundle:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js --mode static --report --report-filename=bundle-report.html",
    "bundle:size": "npm run build && npx size-limit --why",
    "cache:clear": "rm -rf build && rm -rf node_modules/.cache",
    "optimize:images": "npm run build && npx imagemin public/images/* --out-dir=build/static/images",
    "lighthouse:ci": "npm run build && npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-ci.json --chrome-flags='--headless --no-sandbox'",
    "heroku:setup-alerts": "node setup-heroku-alerts.js",
    "heroku:test-alerts": "heroku logs --tail --app lightinuputah | grep 'PERFORMANCE-ALERT\\|JavaScript_Error'",
    "heroku:view-alerts": "heroku addons:open papertrail --app lightinuputah",
    "test:netlify": "node test-netlify-function.js",
    "test:contact": "node test-contact-function.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
