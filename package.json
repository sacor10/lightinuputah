{
  "name": "lightinuputah",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "contentful": "^11.7.6",
    "node-fetch": "^2.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/react-google-recaptcha": "^2.1.9",
    "cross-env": "^7.0.3",
    "nth-check": "^2.1.1",
    "size-limit": "^11.1.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31",
    "webpack-dev-server": "^4.15.1"
  },
  "size-limit": [
    {
      "path": "build/static/js/*.js",
      "limit": "100 kB"
    },
    {
      "path": "build/static/css/*.css",
      "limit": "10 kB"
    }
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve-static": "node server-static.js",
    "serve-netlify": "node netlify-dev.js",
    "dev-static": "npm run build && npm run serve-static",
    "deploy": "node deploy.js",
    "test:netlify": "node test-netlify-function.js",
    "test:contact": "node test-contact-function.js",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "size": "npm run build && npx size-limit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "@typescript-eslint/no-inferrable-types": "error"
    }
  },
  "engines": {
    "node": "22.x",
    "npm": "10.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
